@model List<EmreGaleriApp.Repository.Models.CashRegister>

@{
    ViewData["Title"] = "Kasa Hareketleri";
    var balance = ViewBag.Balance as decimal? ?? 0;
}

<!-- Bootstrap & Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(to right, #f8f9fa, #e8f0fe);
        font-family: 'Segoe UI', sans-serif;
    }

    .card-custom {
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    .card-header-custom {
        background: linear-gradient(135deg, #007bff, #6610f2);
        color: white;
        padding: 20px 25px;
    }

    .balance-display {
        font-size: 1.5rem;
        font-weight: 600;
    }

    .badge-income {
        background-color: #d1f9e6;
        color: #0f5132;
        font-size: 0.9rem;
        padding: 5px 10px;
        border-radius: 10px;
    }

    .badge-expense {
        background-color: #f8d7da;
        color: #842029;
        font-size: 0.9rem;
        padding: 5px 10px;
        border-radius: 10px;
    }

    .btn-glow {
        background: linear-gradient(135deg, #00b09b, #96c93d);
        color: white;
        border: none;
        transition: 0.3s ease;
    }

        .btn-glow:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        }

    .table thead th {
        text-align: center;
        vertical-align: middle;
    }

    .table tbody td {
        text-align: center;
        vertical-align: middle;
    }
</style>

<div class="container py-5">
    <div class="card card-custom">
        <div class="card-header card-header-custom d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="bi bi-cash-coin me-2"></i> @ViewData["Title"]
            </h4>
            <div class="balance-display text-end">
                <i class="bi bi-wallet2 me-1"></i>
                <span class="text-white">Bakiye:</span>
                <span class="text-warning">@balance.ToString("C")</span>
            </div>
        </div>

        <div class="p-4">
            <div class="mb-3 text-end">
                <a asp-action="AddTransaction" class="btn btn-glow rounded-pill px-4">
                    <i class="bi bi-plus-circle me-1"></i> Yeni İşlem
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle shadow-sm">
                    <thead class="table-light">
                        <tr>
                            <th>Tarih</th>
                            <th>Tutar</th>
                            <th>Tip</th>
                            <th>Açıklama</th>
                            <th>Yapan</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">Herhangi bir işlem bulunamadı.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td class="fw-semibold text-@(item.Amount >= 0 ? "success" : "danger")">
                                        @item.Amount.ToString("C")
                                    </td>
                                    <td>
                                        <span class="@(item.Type == "Gelir" ? "badge-income" : "badge-expense")">
                                            @item.Type
                                        </span>
                                    </td>
                                    <td>@item.Description</td>
                                    <td>@(item.CreatedByUser?.UserName ?? "Bilinmiyor")</td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-2">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Düzenle">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Sil">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
