    @model List<EmreGaleriApp.Web.Areas.Admin.Models.UserViewModel>

    @{
        ViewData["Title"] = "Kullanıcı Listesi";
    }

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .page-title {
            text-align: center;
            margin: 2.5rem 0 2rem 0;
            font-weight: 700;
            font-size: 2.5rem;
            color: #212529;
        }

        .user-list {
            max-width: 900px;
            margin: 0 auto 3rem auto;
            padding: 0 1rem;
        }

        .user-item {
            display: flex;
            align-items: center;
            background-color: #fff;
            border-radius: 0.5rem;
            padding: 1rem 1.5rem;
            box-shadow: 0 0.1rem 0.3rem rgb(0 0 0 / 0.1);
            margin-bottom: 1rem;
            transition: box-shadow 0.3s ease;
        }

            .user-item:hover {
                box-shadow: 0 0.3rem 0.8rem rgb(0 0 0 / 0.15);
            }

        .profile-img, .profile-placeholder {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            border: 3px solid #0d6efd;
            object-fit: cover;
            user-select: none;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 1.8rem;
            color: white;
            background-color: #6c757d;
            flex-shrink: 0;
            margin-right: 1.25rem;
        }

        .user-info {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            gap: 0.35rem;
            color: #212529;
        }

        .user-name {
            font-weight: 700;
            font-size: 1.2rem;
            word-break: break-word;
        }

        .user-email {
            font-size: 0.9rem;
            color: #6c757d;
            word-break: break-word;
        }

        .user-details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 0.75rem 1.25rem;
            margin-top: 0.6rem;
            font-size: 0.9rem;
            color: #495057;
        }

        .detail-item {
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
        }

        .detail-label {
            font-weight: 600;
            color: #0d6efd;
            margin-bottom: 0.2rem;
            white-space: nowrap;
        }

        .not-specified {
            font-style: italic;
            color: #adb5bd;
        }

        .action-buttons {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            margin-left: 1.5rem;
            flex-shrink: 0;
        }

            .action-buttons a {
                min-width: 90px;
                font-weight: 600;
                border-radius: 0.5rem;
                font-size: 0.875rem;
                padding: 0.375rem 0.75rem;
                text-align: center;
                transition: background-color 0.2s ease;
                user-select: none;
            }

        .btn-detail {
            background-color: #0d6efd;
            color: white;
            border: none;
        }

            .btn-detail:hover {
                background-color: #0b5ed7;
                color: white;
            }

        .btn-edit {
            background-color: #ffc107;
            color: #212529;
            border: none;
        }

            .btn-edit:hover {
                background-color: #e0a800;
                color: #212529;
            }

        .btn-delete {
            background-color: #dc3545;
            color: white;
            border: none;
        }

            .btn-delete:hover {
                background-color: #bb2d3b;
                color: white;
            }

        @@media (max-width: 575.98px) {
            .user-item

        {
            flex-direction: column;
            align-items: flex-start;
        }

        .action-buttons {
            flex-direction: row;
            margin-left: 0;
            width: 100%;
            justify-content: space-between;
            margin-top: 1rem;
        }

            .action-buttons a {
                flex-grow: 1;
                margin: 0 0.25rem;
            }

        .user-details {
            grid-template-columns: 1fr;
            margin-top: 1rem;
        }

        .detail-item {
            min-width: 100%;
        }

        }

    .role-badge {
        display: inline-block;
        background-color: #ffd700; /* Bootstrap mavi */
        color: white;
        padding: 0.15rem 0.5rem;
        border-radius: 0.25rem;
        margin-right: 0.99rem;
        margin-bottom: 0.25rem;
        font-size: 0.85rem;
        user-select: none;
    }
    </style>

    <div class="container user-list">
        <h1 class="page-title">Kullanıcı Listesi</h1>

        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
                <div class="user-item">
                    @if (!string.IsNullOrEmpty(user.Picture))
                    {
                        <img src="/userpictures/@user.Picture" alt="Profil Fotoğrafı" class="profile-img" />
                    }
                    else
                    {
                        <div class="profile-placeholder">@user.Name?.Substring(0, 1).ToUpper()</div>
                    }

                <div class="detail-item mb-0">
                    <span class="detail-label">Roller</span>
                    @if (user.Roles != null && user.Roles.Any())
                    {
                        foreach (var role in user.Roles)
                        {
                            <span class="role-badge">@role</span>
                        }
                    }
                    else
                    {
                        <span class="not-specified">Belirtilmemiş</span>
                    }
                </div>


                    <div class="user-info">
                        <div class="user-name">@user.Name</div>
                        <div class="user-email">@user.Email</div>

                        <div class="user-details">
                            <div class="detail-item">
                                <span class="detail-label">Telefon</span>
                                @if (string.IsNullOrWhiteSpace(user.Phone))
                                {
                                    <span class="not-specified">Belirtilmemiş</span>
                                }
                                else
                                {
                                    @user.Phone
                                }
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">TC Kimlik No</span>
                                @if (string.IsNullOrWhiteSpace(user.NationalId))
                                {
                                    <span class="not-specified">Belirtilmemiş</span>
                                }
                                else
                                {
                                    @user.NationalId
                                }
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Doğum Tarihi</span>
                                @if (user.BirthDate.HasValue)
                                {
                                    @user.BirthDate.Value.ToString("dd.MM.yyyy")
                                }
                                else
                                {
                                    <span class="not-specified">Belirtilmemiş</span>
                                }
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Ehliyet Tipi</span>
                                @if (user.LicenseTypes != null && user.LicenseTypes.Any())
                                {
                                    @(string.Join(", ", user.LicenseTypes))
                                }
                                else
                                {
                                    <span class="not-specified">Belirtilmemiş</span>
                                }
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Cinsiyet</span>
                                @if (string.IsNullOrWhiteSpace(user.Gender))
                                {
                                    <span class="not-specified">Belirtilmemiş</span>
                                }
                                else
                                {
                                    @(user.Gender.ToLower() switch
                                    {
                                        "male" => "Erkek",
                                        "female" => "Kadın",
                                        _ => user.Gender
                                    })
                                }
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Sürüş Deneyimi</span>
                                @if (user.DrivingExperienceYears.HasValue)
                                {
                                    @($"{user.DrivingExperienceYears.Value} yıl")
                                }
                                else
                                {
                                    <span class="not-specified">Belirtilmemiş</span>
                                }
                            </div>

                        </div>
                        

                    </div>

                    <div class="action-buttons">
                    <a asp-area="Admin" asp-controller="User" asp-action="Details" asp-route-id="@user.Id" class="btn btn-detail">Detay</a>
                    <a asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-edit">
                        Düzenle
                    </a>
                    <a asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-delete">Sil</a>

                    <a class ="btn btn-success" asp-area="Admin" asp-controller="User" asp-action="AssignRoles" asp-route-id="@user.Id" class="btn btn-sm btn-primary">
                        Rol Ata
                    </a>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center text-muted fst-italic mt-5">Kayıtlı kullanıcı bulunamadı.</p>
        }
    </div>
