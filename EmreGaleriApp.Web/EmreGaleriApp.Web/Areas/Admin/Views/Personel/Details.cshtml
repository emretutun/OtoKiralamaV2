@model EmreGaleriApp.Repository.Models.PersonelDetail

@{
    ViewData["Title"] = "Personel Detayları";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Personel Bilgileri</h5>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Kullanıcı Adı</dt>
                <dd class="col-sm-9">@(!string.IsNullOrEmpty(Model.User?.UserName) ? Model.User.UserName : "Bilinmiyor")</dd>

                <dt class="col-sm-3">E-posta</dt>
                <dd class="col-sm-9">@(!string.IsNullOrEmpty(Model.User?.Email) ? Model.User.Email : "Bilinmiyor")</dd>

                <dt class="col-sm-3">Telefon</dt>
                <dd class="col-sm-9">@(!string.IsNullOrEmpty(Model.User?.PhoneNumber) ? Model.User.PhoneNumber : "Bilinmiyor")</dd>

                <dt class="col-sm-3">Pozisyon</dt>
                <dd class="col-sm-9">@Model.Position</dd>

                <dt class="col-sm-3">Maaş</dt>
                <dd class="col-sm-9">@Model.Salary.ToString("C")</dd>

                <dt class="col-sm-3">Başlangıç Tarihi</dt>
                <dd class="col-sm-9">@Model.StartDate.ToString("dd.MM.yyyy")</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex flex-wrap gap-2">
        <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#confirmSalaryModal">
            <i class="bi bi-currency-dollar me-1"></i> Maaş Ödemesi
        </button>

        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Geri
        </a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil-square me-1"></i> Düzenle
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
            <i class="bi bi-trash me-1"></i> Sil
        </a>
    </div>
</div>

<!-- Maaş Ödeme Onay Modal -->
<div class="modal fade" id="confirmSalaryModal" tabindex="-1" aria-labelledby="confirmSalaryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content border-warning">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="confirmSalaryModalLabel">Maaş Ödemesi Onayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <p>
                    <strong>@Model.User?.UserName</strong> kullanıcısına maaş ödemesi yapmak istediğinize emin misiniz?
                </p>
            </div>
            <div class="modal-footer">
                <form id="salaryPaymentForm" asp-action="PaySalary" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <input type="hidden" name="monthCount" value="1" />
                    <button type="submit" class="btn btn-warning">Evet, Öde</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
