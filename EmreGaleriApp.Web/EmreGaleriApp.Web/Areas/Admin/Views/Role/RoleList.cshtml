@model List<EmreGaleriApp.Repository.Models.AppRole>

@{
    ViewData["Title"] = "Rol Listesi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>@ViewData["Title"]</h2>
    <a asp-area="Admin" asp-controller="Role" asp-action="RoleAdd" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Rol Ekle
    </a>
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-primary">
            <tr>
                <th>#</th>
                <th>Rol Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = 1;
                foreach (var role in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@role.Name</td>
                        <td>
                            <a asp-area="Admin" asp-controller="Role" asp-action="RoleUpdate" asp-route-id="@role.Id" class="btn btn-sm btn-warning me-1">Düzenle</a>

                            <!-- Sil butonu, modalı açacak -->
                            <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@role.Id">
                                Sil
                            </button>

                            <!-- Modal yapısı -->
                            <div class="modal fade" id="deleteModal-@role.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@role.Id" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header bg-danger text-white">
                                            <h5 class="modal-title" id="deleteModalLabel-@role.Id">Rol Silme Onayı</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <p>“<strong>@role.Name</strong>” adlı rolü silmek istediğinize emin misiniz?</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                            <form asp-area="Admin" asp-controller="Role" asp-action="RoleDelete" asp-route-id="@role.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger">Evet, Sil</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                    index++;
                }
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">Henüz kayıtlı rol bulunmamaktadır.</div>
}
