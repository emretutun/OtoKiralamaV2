<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - EmreGaleriApp.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid px-5">
                <a class="navbar-brand simple-title" href="#">Yönetim Paneli</a>

                <style>
                    .simple-title {
                        font-weight: 700;
                        font-size: 1.6rem;
                        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                        color: #222; /* Koyu gri, sert değil ama ciddi */
                        user-select: none;
                        cursor: default;
                    }
                </style>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Menü elemanları sol tarafa hizalı -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link admin-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill me-1"></i> Admin Ana sayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link admin-link" asp-area="Admin" asp-controller="Reminder" asp-action="Index">
                                <i class="bi bi-journal-text me-1"></i> Notlarım
                            </a>
                        </li>

                    </ul>

                    <style>
                        .admin-link {
                            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                            font-weight: 600;
                            font-size: 1.1rem;
                            color: #2c3e50; /* Koyu gri-mavi, şık ve profesyonel */
                            text-decoration: none;
                            padding-bottom: 4px;
                            border-bottom: 2px solid transparent;
                            transition: border-color 0.3s ease, color 0.3s ease;
                            cursor: pointer;
                        }

                            .admin-link:hover, .admin-link:focus {
                                color: #2980b9; /* Daha açık mavi, hoş vurgu */
                                border-bottom-color: #2980b9; /* Alt çizgi beliriyor */
                                text-decoration: none;
                            }
                    </style>


                    <!-- "Ana Sayfaya Dön" linki sağda -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-warning fw-bold" asp-area="" asp-controller="Home" asp-action="Index" title="Ana Sayfaya Dön">
                                <i class="bi bi-box-arrow-in-left me-1"></i> Ana Sayfaya Dön
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="max-width: 1000px; margin: 0 auto;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
