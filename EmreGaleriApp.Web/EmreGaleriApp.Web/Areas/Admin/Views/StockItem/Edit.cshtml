@model EmreGaleriApp.Repository.Models.StockItem

@{
    ViewData["Title"] = "Stok Düzenle";
}

<h2 class="text-center mb-5" style="color:#2c3e50; font-weight:700; font-size:2rem;">
    Stok Bilgilerini Düzenle
</h2>

<div class="mx-auto p-4" style="max-width:600px; background:#f7f9fa; border-radius:16px; box-shadow:0 6px 20px rgba(0,0,0,0.08);">
    <form asp-area="Admin" asp-controller="StockItem" asp-action="Edit" method="post" novalidate>
        <input type="hidden" asp-for="Id" />

        <div class="mb-4">
            <label asp-for="ProductName" class="form-label fw-semibold text-secondary">Ürün Adı</label>
            <input asp-for="ProductName" class="form-control form-control-lg rounded-3 border border-secondary-subtle" placeholder="Ürün adını giriniz" />
            <span asp-validation-for="ProductName" class="text-danger small mt-1 d-block"></span>
        </div>

        <div class="mb-4">
            <label asp-for="PurchasePrice" class="form-label fw-semibold text-secondary">Alış Fiyatı (₺)</label>
            <input asp-for="PurchasePrice" type="number" step="0.01" class="form-control form-control-lg rounded-3 border border-secondary-subtle" placeholder="Örn: 100.00" />
            <span asp-validation-for="PurchasePrice" class="text-danger small mt-1 d-block"></span>
        </div>

        <div class="mb-4">
            <label asp-for="SalePrice" class="form-label fw-semibold text-secondary">Satış Fiyatı (₺)</label>
            <input asp-for="SalePrice" type="number" step="0.01" class="form-control form-control-lg rounded-3 border border-secondary-subtle" placeholder="Örn: 150.00" />
            <span asp-validation-for="SalePrice" class="text-danger small mt-1 d-block"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Quantity" class="form-label fw-semibold text-secondary">Adet</label>
            <input asp-for="Quantity" type="number" class="form-control form-control-lg rounded-3 border border-secondary-subtle" placeholder="Ürün adedini giriniz" />
            <span asp-validation-for="Quantity" class="text-danger small mt-1 d-block"></span>
        </div>

        <div class="mb-5">
            <label asp-for="FirmId" class="form-label fw-semibold text-secondary">Firma</label>
            <select asp-for="FirmId" class="form-select form-select-lg rounded-3 border border-secondary-subtle" asp-items="ViewBag.FirmId">
                <option value="">Firma seçiniz</option>
            </select>
            <span asp-validation-for="FirmId" class="text-danger small mt-1 d-block"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success px-5 rounded-pill fw-semibold shadow-sm">
                Güncelle
            </button>
            <a asp-area="Admin" asp-controller="StockItem" asp-action="Index" class="btn btn-outline-secondary px-5 rounded-pill fw-semibold shadow-sm">
                İptal
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
