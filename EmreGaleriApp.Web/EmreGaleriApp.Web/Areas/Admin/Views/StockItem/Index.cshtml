@model IEnumerable<EmreGaleriApp.Repository.Models.StockItem>

@{
    ViewData["Title"] = "Stok Listesi";
}

<h2>Stok Listesi</h2>

<p>
    <a asp-area="Admin" asp-controller="StockItem" asp-action="Create" class="btn btn-primary">Yeni Stok Ekle</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ürün Adı</th>
            <th>Alış Fiyatı</th>
            <th>Satış Fiyatı</th>
            <th>Adet</th>
            <th>Firma</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.PurchasePrice.ToString("C")</td>
                <td>@item.SalePrice.ToString("C")</td>
                <td>@item.Quantity</td>
                <td>@item.Firm?.Name</td>
                <td>
                    <a asp-area="Admin" asp-controller="StockItem" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-area="Admin" asp-controller="StockItem" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-area="Admin" asp-controller="StockItem" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
