@model EmreGaleriApp.Web.Areas.Admin.Models.AssignRolesViewModel

@{
    ViewData["Title"] = "Kullanıcıya Rol Ata - " + Model.UserName;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AssignRoles" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="mb-3">
        <label>Kullanıcı: <strong>@Model.UserName</strong></label>
    </div>

    <div class="mb-3">
        <label>Roller</label>
        <div>
            @foreach (var role in Model.Roles!)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox"
                           value="@role.RoleName"
                           name="selectedRoles" id="role_@role.RoleId"
                    @(role.IsSelected ? "checked" : "") />
                    <label class="form-check-label" for="role_@role.RoleId">@role.RoleName</label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Rolleri Kaydet</button>
    <a asp-area="Admin" asp-controller="Home" asp-action="UserList" class="btn btn-secondary ms-2">İptal</a>
</form>
