@model EmreGaleriApp.Web.Areas.Admin.Models.UserViewModel

@{
    ViewData["Title"] = "Kullanıcı Detayları";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@Model.Name Kullanıcı Detayları</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 text-center">
                    @if (!string.IsNullOrEmpty(Model.Picture))
                    {
                        <img src="/userpictures/@Model.Picture" alt="Profil Fotoğrafı" class="img-fluid rounded-circle mb-3" style="max-width: 150px;" />
                    }
                    else
                    {
                        <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center mb-3" style="width:150px; height:150px; font-size: 4rem; user-select:none;">
                            @Model.Name?.Substring(0, 1).ToUpper()
                        </div>
                    }
                </div>
                <div class="col-md-9">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th scope="row">Email</th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th scope="row">Telefon</th>
                                <td>@(string.IsNullOrWhiteSpace(Model.Phone) ? "Belirtilmemiş" : Model.Phone)</td>
                            </tr>
                            <tr>
                                <th scope="row">TC Kimlik No</th>
                                <td>@(string.IsNullOrWhiteSpace(Model.NationalId) ? "Belirtilmemiş" : Model.NationalId)</td>
                            </tr>
                            <tr>
                                <th scope="row">Doğum Tarihi</th>
                                <td>@(Model.BirthDate?.ToString("dd.MM.yyyy") ?? "Belirtilmemiş")</td>
                            </tr>
                            <tr>
                                <th scope="row">Cinsiyet</th>
                                <td>
                                    @(Model.Gender?.ToLower() switch
                                    {
                                        "male" => "Erkek",
                                        "female" => "Kadın",
                                        _ => Model.Gender ?? "Belirtilmemiş"
                                    })
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Sürüş Deneyimi</th>
                                <td>@(Model.DrivingExperienceYears.HasValue ? $"{Model.DrivingExperienceYears} yıl" : "Belirtilmemiş")</td>
                            </tr>
                            <tr>
                                <th scope="row">Ehliyet Tipleri</th>
                                <td>@(Model.LicenseTypes != null && Model.LicenseTypes.Any() ? string.Join(", ", Model.LicenseTypes) : "Belirtilmemiş")</td>
                            </tr>
                            <tr>
                                <th scope="row">Roller</th>
                                <td>@(Model.Roles != null && Model.Roles.Any() ? string.Join(", ", Model.Roles) : "Belirtilmemiş")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <a asp-area="Admin" asp-controller="Home" asp-action="UserList" class="btn btn-secondary mt-3">Geri Dön</a>
        </div>
    </div>
</div>
