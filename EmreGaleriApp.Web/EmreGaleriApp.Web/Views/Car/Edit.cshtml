@model EmreGaleriApp.Core.ViewModels.CarEditViewModel

@{
    ViewData["Title"] = "Araç Güncelle";
    var fuelTypes = ViewBag.FuelTypes as List<string>;
    var colors = ViewBag.Colors as List<string>;
}

<h2 class="mb-4">Araç Güncelle</h2>

<form asp-controller="Car" asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ImageUrl" />

    <div class="mb-3">
        <label asp-for="Brand" class="form-label">Marka</label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Model" class="form-label">Model</label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DailyPrice" class="form-label">Günlük ücret</label>
        <input asp-for="DailyPrice" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="DailyPrice" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FuelType" class="form-label">Yakıt Türü</label>
        <select asp-for="FuelType" class="form-select">
            @foreach (var fuel in fuelTypes!)
            {
                <option value="@fuel" selected="@(Model.FuelType == fuel ? "selected" : null)">@fuel</option>
            }
        </select>
        <span asp-validation-for="FuelType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Color" class="form-label">Renk</label>
        <select asp-for="Color" class="form-select">
            @foreach (var color in colors!)
            {
                <option value="@color" selected="@(Model.Color == color ? "selected" : null)">@color</option>
            }
        </select>
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ModelYear" class="form-label">Model Yılı</label>
        <input asp-for="ModelYear" class="form-control" type="number" />
        <span asp-validation-for="ModelYear" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="GearType" class="form-label">Vites Türü</label>
        <select asp-for="GearType" class="form-select" asp-items="Html.GetEnumSelectList<EmreGaleriApp.Core.Enums.GearType>()">
            <option value="">Seçiniz</option>
        </select>
        <span asp-validation-for="GearType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Mileage" class="form-label">Kilometresi</label>
        <input asp-for="Mileage" class="form-control" type="number" />
        <span asp-validation-for="Mileage" class="text-danger"></span>
    </div>

    <!-- Ehliyet Türleri Checkbox Listesi -->
    <div class="mb-3">
        <label class="form-label">Ehliyet Türleri</label>
        <div>
            @for (int i = 0; i < Model.LicenseTypeList.Count; i++)
            {
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox"
                           name="SelectedLicenseTypeIds"
                           value="@Model.LicenseTypeList[i].Value"
                    @(Model.LicenseTypeList[i].Selected ? "checked" : "")
                           id="license_@i" />
                    <label class="form-check-label" for="license_@i">@Model.LicenseTypeList[i].Text</label>
                </div>
            }
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Yeni Görsel (isteğe bağlı)</label>
        <input type="file" asp-for="ImageFile" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="mt-2">
                <img src="@Model.ImageUrl" class="img-thumbnail" style="max-height:200px;" />
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary w-100">Güncelle</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
