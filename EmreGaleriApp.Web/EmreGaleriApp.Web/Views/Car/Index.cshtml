@using EmreGaleriApp.Core.Enums
@model List<EmreGaleriApp.Repository.Models.Car>

@{
    ViewData["Title"] = "Kiralanabilir Araçlarımız";
}

<h2 class="text-center mb-4">Kiralanabilir Araçlarımız</h2>

<!-- Filtreleme Formu -->
<form method="get" class="row g-3 mb-4">
    <!-- Vites Türü -->
    <div class="col-md-3">
        <label class="form-label">Vites Türü</label>
        <select name="gearType" class="form-select" asp-items="ViewBag.GearTypes">
            <option value="">Hepsi</option>
        </select>
    </div>

    <!-- Yakıt Türü -->
    <div class="col-md-3">
        <label class="form-label">Yakıt Türü</label>
        <select name="fuelType" class="form-select" asp-items="ViewBag.FuelTypes">
            <option value="">Hepsi</option>
        </select>
    </div>

    <!-- Renk -->
    <div class="col-md-3">
        <label class="form-label">Renk</label>
        <select name="color" class="form-select" asp-items="ViewBag.Colors">
            <option value="">Hepsi</option>
        </select>
    </div>


    <!-- Filtre Butonu -->
    <div class="col-md-3 d-flex align-items-end">
        <button type="submit" class="btn btn-primary w-100">Filtrele</button>
    </div>
</form>



<!-- Araç Kartları -->
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var car in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm rounded-4 overflow-hidden border-0">
                <div class="ratio ratio-4x3">
                    <img src="@car.ImageUrl" class="card-img-top object-fit-cover" alt="@car.Brand @car.Model" />
                </div>
                <div class="card-body">
                    <h5 class="card-title">@car.Brand @car.Model</h5>
                    <p class="card-text text-muted">@car.Description</p>
                    <p class="fw-semibold text-primary">Günlük: @car.DailyPrice.ToString("N0") ₺</p>
                </div>
                <div class="card-footer d-flex justify-content-between gap-2 bg-white border-top-0">
                    <a asp-controller="Car" asp-action="Details" asp-route-id="@car.Id" class="btn btn-outline-secondary w-50">
                        Detaylar
                    </a>

                    @if (car.IsAvailable)
                    {
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <button class="btn btn-success w-50 btn-add-to-cart" data-car-id="@car.Id">
                                Sepete Ekle
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-success w-50" onclick="location.href='@Url.Action("SignIn", "Home")'">
                                Sepete Ekle
                            </button>
                        }
                    }
                    else
                    {
                        <button class="btn btn-secondary w-50" disabled>Kirada</button>
                    }
                </div>
            </div>
        </div>
    }
</div>

<!-- Uyarı için Modal (Bootstrap 5) -->
<div class="modal fade" id="licenseAlertModal" tabindex="-1" aria-labelledby="licenseAlertModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 shadow border border-danger">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="licenseAlertModalLabel">Ehliyet Uyarısı</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body text-danger fw-semibold">
                Bu aracı kiralamak için yeterli ehliyete sahip değilsiniz.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var buttons = document.querySelectorAll(".btn-add-to-cart");

            buttons.forEach(function (btn) {
                btn.addEventListener("click", function () {
                    var carId = btn.getAttribute("data-car-id");

                    fetch(`/Cart/AddToCart?id=${carId}`, {
                        method: 'GET',
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            window.location.href = "/Cart/Index";
                        } else {
                            var licenseModal = new bootstrap.Modal(document.getElementById('licenseAlertModal'));
                            licenseModal.show();
                        }
                    })
                    .catch(error => console.error('Hata:', error));
                });
            });
        });
    </script>
}
