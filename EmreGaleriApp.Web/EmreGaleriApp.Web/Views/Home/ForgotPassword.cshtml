@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Şifre Sıfırlama";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg rounded-3" style="width: 100%; max-width: 400px;">
        <div class="card-body p-4">
            <h2 class="card-title text-center mb-4 text-primary fw-bold">Şifrenizi Sıfırlayın</h2>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
                </div>
            }

            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <form asp-action="ForgotPassword" method="post" novalidate>
                <div class="mb-4">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" class="form-control form-control-lg" placeholder="E-posta adresiniz" />
                    <span asp-validation-for="Email" class="text-danger fw-semibold small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 fw-bold shadow-sm">
                    <i class="fas fa-envelope me-2"></i>Şifre Sıfırlama Linki Gönder
                </button>
            </form>

            <div class="mt-4 text-center">
                <a asp-action="SignIn" asp-controller="Home" class="text-decoration-none me-3 text-primary fw-semibold">Giriş Yap</a> |
                <a asp-action="SignUp" asp-controller="Home" class="text-decoration-none ms-3 text-primary fw-semibold">Üye Ol</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
