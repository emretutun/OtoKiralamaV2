@model EmreGaleriApp.Core.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Şifre Yenileme";
}

<div class="container mt-5" style="max-width: 400px;">
    <div class="card shadow-sm rounded">
        <div class="card-body">

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }

            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <form method="post" novalidate>
                @* Gizli inputlar: UserId ve Token postta gönderilmeli ki controller alabilsin *@
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="Token" />

                <h2 class="text-center mb-4 fw-bold text-primary">Yeni Şifre Oluştur</h2>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control shadow-sm" type="password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PasswordConfirm" class="form-label"></label>
                    <input asp-for="PasswordConfirm" class="form-control shadow-sm" type="password" />
                    <span asp-validation-for="PasswordConfirm" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 fw-semibold shadow-sm" style="transition: background-color 0.3s ease;">
                    Şifre Yenile
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
