@model EmreGaleriApp.Core.ViewModels.SignInViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5" style="max-width: 400px;">
    <div class="card shadow-sm rounded">
        <div class="card-body">
            <h2 class="card-title text-center mb-4 fw-bold text-primary">Hesabınıza Giriş Yapın</h2>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["ErrorMessage"]
                </div>
            }

            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <form asp-action="SignIn" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control shadow-sm" placeholder="E-posta adresiniz" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control shadow-sm" placeholder="Şifreniz" type="password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Beni Hatırla</label>
                </div>

                <button type="submit" class="btn btn-primary w-100 fw-semibold shadow-sm" style="transition: background-color 0.3s ease;">
                    Giriş Yap
                </button>
            </form>

            <div class="mt-3 text-center">
                <p class="small text-muted">
                    Hesabınız yok mu? <a asp-action="SignUp" asp-controller="Home" class="text-primary fw-semibold text-decoration-none">Kayıt Olun</a>
                </p>
                <p class="small text-muted">
                    <a asp-action="ForgotPassword" asp-controller="Home" class="text-primary fw-semibold text-decoration-none">Şifremi Unuttum</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
