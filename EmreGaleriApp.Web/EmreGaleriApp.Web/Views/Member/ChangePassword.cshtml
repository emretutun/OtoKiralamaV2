@model EmreGaleriApp.Core.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Şifre Değiştir";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg rounded-3" style="width: 100%; max-width: 480px;">
        <div class="card-body p-4">
            <h3 class="text-center mb-4 text-primary fw-bold">Şifre Değiştir</h3>

            @* Başarı mesajı *@
            @if (ViewBag.PasswordChanged != null && ViewBag.PasswordChanged == true)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>Şifreniz başarıyla güncellendi.
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
                </div>
            }

            @* Opsiyonel mesaj *@
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="fas fa-info-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
                </div>
            }

            @* Hatalar *@
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <form asp-action="ChangePassword" method="post" novalidate>
                <div class="mb-4">
                    <label asp-for="CurrentPassword" class="form-label fw-semibold"></label>
                    <input asp-for="CurrentPassword" type="password" class="form-control form-control-lg" />
                    <span asp-validation-for="CurrentPassword" class="text-danger small fw-semibold"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="NewPassword" class="form-label fw-semibold"></label>
                    <input asp-for="NewPassword" type="password" class="form-control form-control-lg" />
                    <span asp-validation-for="NewPassword" class="text-danger small fw-semibold"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmNewPassword" class="form-label fw-semibold"></label>
                    <input asp-for="ConfirmNewPassword" type="password" class="form-control form-control-lg" />
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger small fw-semibold"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 fw-bold shadow-sm">
                    <i class="fas fa-key me-2"></i>Şifreyi Güncelle
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
