@model EmreGaleriApp.Core.ViewModels.CarReviewViewModel

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger shadow-sm">
        @Html.ValidationSummary()
    </div>
}

<h2 class="mb-4 text-primary fw-bold">Araç Yorumu Ekle</h2>

<form asp-action="AddReview" method="post" novalidate>
    <input type="hidden" asp-for="OrderId" />
    <input type="hidden" asp-for="CarId" />

    <div class="mb-4">
        <label asp-for="Rating" class="form-label fw-semibold">Puan (1-5)</label>
        <select asp-for="Rating" class="form-select" required aria-describedby="ratingHelp">
            <option value="" disabled selected>Seçiniz</option>
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
        <div class="form-text" id="ratingHelp">Lütfen 1 ile 5 arasında bir puan seçin.</div>
        <span asp-validation-for="Rating" class="text-danger fw-semibold"></span>
    </div>

    <div class="mb-4">
        <label asp-for="Comment" class="form-label fw-semibold">Yorumunuz</label>
        <textarea asp-for="Comment" class="form-control" rows="5" placeholder="Yorumunuzu buraya yazınız..." required></textarea>
        <span asp-validation-for="Comment" class="text-danger fw-semibold"></span>
    </div>

    <div class="d-flex align-items-center gap-3">
        <button type="submit" class="btn btn-primary px-4 py-2 shadow-sm">
            <i class="fas fa-paper-plane me-2"></i>Yorumu Gönder
        </button>
        <a asp-action="MyOrders" class="btn btn-outline-secondary px-4 py-2">
            <i class="fas fa-arrow-left me-2"></i>Geri Dön
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
